
{%
  set title_classes = [
    label_display == 'visually_hidden' ? 'visually-hidden',
  ]
%}

{% if label_hidden %}
  {% if multiple %}
    {{ attributes }}
      {% for item in items %}
        {{ item.attributes }}{{ item.content }}
      {% endfor %}

  {% else %}
    {% for item in items %}
      {{ attributes }}{{ item.content }}
    {% endfor %}
  {% endif %}
{% else %}
  {{ attributes }}
    {{ title_attributes.addClass(title_classes) }}{{ label }}
    {% if multiple %}
      
    {% endif %}
    {% for item in items %}
      {{ item.attributes }}{{ item.content }}
    {% endfor %}
    {% if multiple %}
      
    {% endif %}
  
{% endif %}
